{% for post in paged
    .posts
    .slice(0, maxPosts) %}
    <div class="w-full sm:w-1/2 md:w-1/3 self-stretch p-2 mb-2">
        <div class="rounded shadow-md h-full">
            <a href="{{ post.url | url }}" class="">
                <img class="w-full m-0 rounded-t object-cover h-[200px] bg-cover bg-[url('/assets/img/paul-english-article-thumb.webp')]" src="{% if post.data.thumb %}{{ post.data.thumb | url }}{% else %}{{ '/assets/img/paul-english-article-thumb.webp' | url }}{% endif %}" width="360" height="200" alt="{% if post.data.thumbAlt %}{{ post.data.thumbAlt }}{% else %}Paul English featured{% endif %}">
            </a>
            <div class="px-6 py-5">
                <div class="font-semibold text-lg mb-2">
                    <a class="text-slate-900 hover:text-slate-700 no-underline" href="{{ post.url | url }}">
                        <h2>{{ post.data.title }}</h2>
                    </a>
                </div>
                <p class="text-slate-700 mb-1 text-sm" title="Published date">{{ post.data.page.date | readableDate }}</p>
                <p class="text-slate-800 text-base leading-snug">
                    {% if post.data.description %}
                        {{ post.data.description }}
                    {% else %}
                        {{ post.templateContent | striptags | truncate(90, true) }}
                    {% endif %}
                </p>
            </div>
        </div>
    </div>
{% endfor %}